<UserControl
    x:Class="VenturaSQLStudio.GettingStartedControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VenturaSQLStudio"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="0,5,0,5" Background="#FFEFEFF2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="20" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Name="textblock"
            Grid.Column="0"
            Padding="10,20,10,20"
            FontSize="14"
            TextWrapping="Wrap" />
        <Grid Grid.Column="1">
            <Rectangle
                Width="160"
                Height="120"
                MaxHeight="220"
                Margin="0,10,10,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                RadiusX="15"
                RadiusY="15">
                <Rectangle.Fill>
                    <ImageBrush x:Name="brush" Stretch="UniformToFill" />
                </Rectangle.Fill>
            </Rectangle>
        </Grid>

    </Grid>
</UserControl>
