<ventura:VenturaWindow x:Class="VenturaSQLStudio.Pages.ProjectItemsPage.CreateFolderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VenturaSQLStudio.Pages.ProjectItemsPage"
        xmlns:ventura="clr-namespace:VenturaSQLStudio"
        mc:Ignorable="d"
        Title="New Folder" Height="140" Width="300">
    <StackPanel Margin="10">
        <TextBlock>Name:</TextBlock>
        <TextBox Name="txtFolderName" Margin="0,5,0,0" />
        <StackPanel Margin="0,10,0,0" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Name="btnNew" Padding="5" IsDefault="True" Click="btnNew_Click">New</Button>
            <Button Padding="5" Margin="10,0,0,0" IsCancel="True">Cancel</Button>
        </StackPanel>
    </StackPanel>
</ventura:VenturaWindow>
