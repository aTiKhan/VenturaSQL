<ventura:VenturaWindow x:Class="VenturaSQLStudio.Pages.ProjectItemsPage.MoveItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VenturaSQLStudio.Pages.ProjectItemsPage"
        xmlns:ventura="clr-namespace:VenturaSQLStudio"
        xmlns:UserControls="clr-namespace:VenturaSQLStudio.UserControls"
        mc:Ignorable="d"
        Title="Move selected items - destination folder" Height="400" Width="500">
    <StackPanel Margin="10">
        <UserControls:ProjectItemsTreeView x:Name="ProjectFoldersTreeview" Height="300" />

        <StackPanel Margin="0,10,0,0" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Name="btnMove" Padding="5" IsDefault="True" IsEnabled="False" Click="btnMove_Click">Move</Button>
            <Button Padding="5" Margin="10,0,0,0" IsCancel="True">Cancel</Button>
        </StackPanel>
    </StackPanel>
</ventura:VenturaWindow>
